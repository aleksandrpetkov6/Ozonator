@@ -0,0 +1,122 @@
+name: Publish CI digest (public)
+
+on:
+  workflow_run:
+    workflows:
+      - "Windows CI (Озонатор)"
+      - "publish-nightly-release"
+      - "Apply patch and open PR"
+      - "enable-automerge"
+    types: [completed]
+
+permissions:
+  contents: write
+
+concurrency:
+  group: ci-digest
+  cancel-in-progress: true
+
+jobs:
+  digest:
+    runs-on: ubuntu-latest
+    steps:
+      - name: Checkout (for push)
+        uses: actions/checkout@v4
+        with:
+          fetch-depth: 0
+
+      - name: Build digest
+        env:
+          GH_TOKEN: ${{ secrets.GITHUB_TOKEN }}
+          REPO: ${{ github.repository }}
+          RUN_ID: ${{ github.event.workflow_run.id }}
+          RUN_URL: ${{ github.event.workflow_run.html_url }}
+          WF_NAME: ${{ github.event.workflow_run.name }}
+          CONCLUSION: ${{ github.event.workflow_run.conclusion }}
+          HEAD_SHA: ${{ github.event.workflow_run.head_sha }}
+          HEAD_BRANCH: ${{ github.event.workflow_run.head_branch }}
+          EVENT: ${{ github.event.workflow_run.event }}
+          CREATED_AT: ${{ github.event.workflow_run.created_at }}
+          UPDATED_AT: ${{ github.event.workflow_run.updated_at }}
+        run: |
+          set -euo pipefail
+          mkdir -p out/runs
+
+          md="out/runs/${RUN_ID}.md"
+          {
+            echo "# CI digest"
+            echo
+            echo "- Workflow: \`${WF_NAME}\`"
+            echo "- Run: ${RUN_URL}"
+            echo "- Conclusion: **${CONCLUSION}**"
+            echo "- Event: \`${EVENT}\`"
+            echo "- Branch: \`${HEAD_BRANCH}\`"
+            echo "- Commit: \`${HEAD_SHA}\`"
+            echo "- Created: ${CREATED_AT}"
+            echo "- Updated: ${UPDATED_AT}"
+            echo
+            echo "## Failed logs (tail)"
+            echo
+          } > "$md"
+
+          # Try to fetch only failed step logs (works even when artifacts are missing)
+          set +e
+          gh run view "${RUN_ID}" -R "${REPO}" --log-failed > out/log-failed.txt 2>&1
+          code=$?
+          set -e
+          if [ $code -ne 0 ]; then
+            {
+              echo "> Не удалось получить логи через gh (код $code)."
+              echo "> См. out/log-failed.txt (будет приложено ниже)."
+              echo
+            } >> "$md"
+          fi
+
+          {
+            echo "```"
+            tail -n 220 out/log-failed.txt || true
+            echo "```"
+            echo
+          } >> "$md"
+
+          # Also list artifacts (if any)
+          set +e
+          gh api -H "Accept: application/vnd.github+json" "/repos/${REPO}/actions/runs/${RUN_ID}/artifacts" > out/artifacts.json 2>/dev/null
+          set -e
+          if [ -s out/artifacts.json ]; then
+            echo "## Artifacts (names)" >> "$md"
+            echo >> "$md"
+            echo "```" >> "$md"
+            jq -r '.artifacts[]? | "\(.name) (\(.size_in_bytes) bytes)"' out/artifacts.json 2>/dev/null || true >> "$md"
+            echo "```" >> "$md"
+            echo >> "$md"
+          fi
+
+          # last.md pointer
+          cp "$md" out/last.md
+
+      - name: Publish to ci-report branch (force)
+        run: |
+          set -euo pipefail
+          git config user.name  "github-actions[bot]"
+          git config user.email "41898282+github-actions[bot]@users.noreply.github.com"
+
+          # orphan branch with only digest files
+          git checkout --orphan ci-report
+          git rm -rf . >/dev/null 2>&1 || true
+          mkdir -p runs
+          cp -r out/runs/* runs/
+          cp out/last.md last.md
+
+          git add runs last.md
+          git commit -m "CI digest: ${{ github.event.workflow_run.name }} #${{ github.event.workflow_run.id }} (${{ github.event.workflow_run.conclusion }})" || true
+          git push -f origin ci-report
