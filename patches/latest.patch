+  if (typeof requestBodyRaw !== 'string' || !requestBodyRaw.trim()) return ''
+
+  try {
+    const parsed = JSON.parse(requestBodyRaw)
+    const postingNumber = String((parsed as any)?.posting_number ?? '').trim()
+    return postingNumber
+  } catch {
+    return ''
+  }
