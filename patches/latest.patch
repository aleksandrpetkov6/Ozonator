-*/ .tableHeadX{ overflow-x: auto; overflow-y: hidden; min-width: 0; scrollbar-width: none; /* Firefox */ -ms-overflow-style: none; /* old Edge */ } .tableHeadX::-webkit-scrollbar{ height: 0; width: 0; } .tableBody tr:first-child td{ border-top: none; }
+*/ .tableHeadX{ overflow-x: auto; overflow-y: hidden; min-width: 0; scrollbar-width: none; /* Firefox */ -ms-overflow-style: none; /* old Edge */ } .tableHeadX::-webkit-scrollbar{ height: 0; width: 0; } .tableBody tr:first-child td{ border-top: none; }
+
+/* === Products table header compact + performance tweaks (variant 2) === */
+
+/* Убираем "Озонатор" из шапки */
+.appName{ display: none !important; }
+.appTitle{ padding-left: 0 !important; padding-right: 0 !important; }
+
+/* Меньше воздуха в шапке столбца */
+.table th{ padding-left: 4px !important; padding-right: 4px !important; }
+.thInner{
+  gap: 3px !important;
+  padding-right: 3px !important; /* было 10px */
+  overflow: hidden !important;
+}
+
+/* Убираем 6 точек‑"хваталку" */
+.thGrip{ display: none !important; }
+
+/* Без троеточия — просто обрезаем по ширине */
+.thTitle,
+.cellText{
+  text-overflow: clip !important;
+}
+.thTitle{ max-width: 100% !important; }
+
+/* Значок свернуть: всегда вертикальный овал, и меньше */
+.colToggle{
+  width: 10px !important;
+  min-width: 10px !important;
+  height: 16px !important;
+  padding: 0 !important;
+  border-radius: 999px !important;
+  line-height: 16px !important;
+  font-size: 9px !important;
+}
+
+/* Вариант 2: нейтральный (не синий) индикатор вставки/дропа */
+.dropIndicator,
+.thDropLeft::before,
+.thDropRight::before{
+  background: rgba(60,60,67,.28) !important;
+}
+
+/* Границы колонок по всей таблице (визуальная определенность при ресайзе) */
+.table th,
+.table td{
+  box-shadow: inset -1px 0 0 rgba(60,60,67,.10);
+}
+.table th:last-child,
+.table td:last-child{
+  box-shadow: none;
+}
+
+/* Ускоряем скролл/ресайз: убираем дорогой blur на sticky header */
+.table th{
+  backdrop-filter: none !important;
+  -webkit-backdrop-filter: none !important;
+}
