+// Открывать первое окно развернутым (maximize) сразу при старте приложения.
+// Это именно «развернуть», а не fullscreen/kiosk (чтобы оставались рамка, кнопки и панель задач).
+app.once('browser-window-created', (_event, window) => {
+  try {
+    if (!window.isMaximized()) window.maximize()
+  } catch {}
+})
