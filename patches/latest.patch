+import { readFileSync } from 'fs';
+
+/** Load secrets from a JSON file. */
+const secretsFile = 'secrets.json';
+let secrets: Record<string, unknown> = {};
+
+try {
+  const data = readFileSync(secretsFile, 'utf-8');
+  secrets = JSON.parse(data);
+} catch (err) {
+  // If the file does not exist or is invalid, fall back to an empty object.
+  // This keeps the application running in environments where secrets are
+  // injected via other means (e.g., environment variables).
+  secrets = {};
+}
+
+export default secrets;
