+export function dbGetLatestPostingDetailResponses(storeClientId: string | null | undefined, endpointsRaw: unknown): ApiRawCachePostingDetailRow[] {
+  const endpoints = Array.from(new Set((Array.isArray(endpointsRaw) ? endpointsRaw : [])
+    .map((v) => String(v ?? '').trim())
+    .filter(Boolean)))
+
+  if (endpoints.length === 0) return []
