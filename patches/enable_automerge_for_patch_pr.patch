+name: enable-automerge-for-agents
+
+on:
+  pull_request:
+    types: [opened, reopened, synchronize, ready_for_review]
+
+permissions:
+  pull-requests: write
+  contents: write
+
+jobs:
+  enable:
+    if: >-
+      github.event.pull_request.draft == false &&
+      (
+        github.event.pull_request.user.login == 'github-copilot' ||
