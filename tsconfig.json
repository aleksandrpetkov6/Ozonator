{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "strict": true,
    "jsx": "react-jsx",
    "baseUrl": ".",
    "types": ["node"],
    "skipLibCheck": true
  },
  "exclude": [
    "node_modules",
    "dist",
    "out",
    "release",
    "_backup_patch",
    "playwright.config.*",
    "tests/e2e/**",
    "playwright-report/**",
    "test-results/**"
  ]
}
