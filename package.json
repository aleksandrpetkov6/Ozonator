{
  "name": "ozon-seller-os-mvp0",
  "private": true,
  "version": "0.1.0",
  "description": "Озонатор: локальные ключи, синхронизация товаров, отображение списка",
  "main": "dist/main/index.js",
  "scripts": {
    "dev": "electron-vite dev",
    "build": "electron-vite build",
    "dist": "electron-vite build && electron-builder",
    "lint": "eslint . --ext .ts,.tsx"
  },
  "dependencies": {
    "better-sqlite3": "^11.0.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router-dom": "^6.26.2",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@types/node": "^22.10.10",
    "@types/react": "^18.3.18",
    "@types/react-dom": "^18.3.5",
    "@typescript-eslint/eslint-plugin": "^8.20.0",
    "@typescript-eslint/parser": "^8.20.0",
    "@vitejs/plugin-react": "^4.3.4",
    "electron": "^32.2.0",
    "electron-builder": "^25.1.8",
    "electron-rebuild": "^3.2.9",
    "electron-vite": "^2.3.0",
    "eslint": "^9.19.0",
    "eslint-plugin-react-hooks": "^5.1.0",
    "typescript": "^5.7.3",
    "vite": "^5.4.21"
  },
  "build": {
    "appId": "com.clothes-hub.ozon-seller-os",
    "productName": "Озонатор",
    "directories": {
      "output": "release"
    },
    "mac": {
      "category": "public.app-category.business"
    },
    "win": {
      "target": [
        "nsis"
      ],
      "executableName": "Озонатор"
    },
    "asarUnpack": [
      "**/*.node"
    ],
    "nsis": {
      "oneClick": true,
      "perMachine": false,
      "createDesktopShortcut": "always",
      "createStartMenuShortcut": true,
      "shortcutName": "Озонатор"
    },
    "artifactName": "../Озонатор.${ext}"
  }
}
